            <th>Proyecci칩n</th>
        </tr>
        </thead>
        #foreach( $key in $map.keySet())
        <tr>
            #set ($teamData = $map.get($key))
                <td>$key</td>
            <td>$teamData.score</td>
            <td>$teamData.computedScore</td>
            <td>$teamData.usedPlayers</td>
