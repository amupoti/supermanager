<!DOCTYPE html>
<html>
<head>
#parse( "../include/header.vm" )
<script>

 $(document).ready(function() {

   $('.containerts').each(function(i) {
     $(this).children(".tablesorter")
       .tablesorter({
         widthFixed: true,
         widgets: ['zebra']
       });
   });

   (function countdown(remaining) {
            if(remaining === 0)
                location.reload(true);
            document.getElementById('countdown').innerHTML = "Se actualizar치 en " + remaining + " segundos";
            setTimeout(function(){ countdown(remaining - 1); }, 1000);
        })(60);
 });

</script>
    <style type="text/css">
body{
background-color: #f7f7f7
}
    </style>
</head>
<body>

<div align="right" id="countdown"></div>

<h1>Resumen de tus equipos</h1>
<div align="center" class="containerts">
    #set ($map = $teamMap)
    <table style="width: 80%" id="myTable-overview" class="tablesorter">
        <thead>
        <tr>
            <th>Equipo</th>
            <th>Valoraci칩n</th>
            <th>Valoraci칩n sumada</th>
            <th>Han jugado</th>
