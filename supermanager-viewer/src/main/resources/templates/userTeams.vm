<!DOCTYPE html>
<html>
<head>
#parse( "./include/header.vm" )
<script>

 $(document).ready(function() {

   $('.containerts').each(function(i) {
     $(this).children(".tablesorter")
       .tablesorter({
         widthFixed: true,
         widgets: ['zebra']
       });
   });

   (function countdown(remaining) {
            if(remaining === 0)
                location.reload(true);
            document.getElementById('countdown').innerHTML = "Se actualizar√° en " + remaining + " segundos";
            setTimeout(function(){ countdown(remaining - 1); }, 1000);
        })(60);

 });

</script>
</head>
<body>

    <div class="containerts">
    <h1>Jornada Actual</h1>

    <div align="right" id="countdown">
    </div>

    #set ($map = $teamMap)
    #foreach( $key in $map.keySet())
        #set ($smDataList = $map.get($key).playerList)
        #set ($score = $map.get($key).score)
        <h2>$key - $score puntos</h2>
        <table id="myTable-$key" class="tablesorter">
            #parse("./include/playersTable.vm")
        </table>
    #end

    </div>
</body>
</html>



